{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@utils": [
        "libs/utils/src"
      ],
      "@utils/utils/*": [
        "libs/utils/src/*"
      ],
      "@core": [
        "libs/core/src"
      ],
      "@core/domain": [
        "libs/core/src/domain"
      ],
      "@core/infrastructure": [
        "libs/core/src/infrastructure"
      ],
      "@core/core/*": [
        "libs/core/src/*"
      ],
      "@database": [
        "libs/database/src"
      ],
      "@database/entities": [
        "libs/database/src/entities"
      ],
      "@database/database/*": [
        "libs/database/src/*"
      ],
      "@settings": [
        "libs/settings/src"
      ],
      "@settings/settings/*": [
        "libs/settings/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}